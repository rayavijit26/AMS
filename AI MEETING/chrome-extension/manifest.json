{
  "manifest_version": 3,
  "name": "AI Meeting Summarizer",
  "version": "1.0",
  "description": "Capture and summarize meeting audio automatically",
  "permissions": [
    "microphone",
    "activeTab",
    "storage",
    "tabCapture"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Meeting Summarizer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://127.0.0.1:5000/*" 
  ]
}